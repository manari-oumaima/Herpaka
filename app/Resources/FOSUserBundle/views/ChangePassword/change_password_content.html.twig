<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <hr />
            <h2 class="title text-center" >Change your password</h2>
            <hr />
            <div class="account-wall">
                <form action="{{ path('fos_user_profile_edit') }}" class="fos_user_profile_edit" 
                		method="POST">
                    <div id="fos_user_profile_edit">
                        <div class="form-group" >
                            <label> Current password </label>
                	       {{ form_widget(form.current_password, { 'attr': {'class': 'form-control' } }) }}
                	       {{ form_errors(form.current_password) }}
                        </div>
                        <div class="form-group" >
                            <label> New password </label>
                	       {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control' } }) }}
                	       {{ form_errors(form.plainPassword.first) }}
                        </div>
                        <div class="form-group" >
                        	<label> New password confirmation</label>
                	       {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control' } }) }}
                	       {{ form_errors(form.plainPassword.second) }}                            
                        </div>
                		<div class="form-group">{{ form_rest(form) }}</div>
                    	<div>
                            <div class="col-md-6">
                                <input class="btn btn-lg btn-succes btn-block" type="submit" value="Save">
                            </div>
                            <div class="col-md-6">
                                <input class="btn btn-lg btn-succes btn-block" type="reset" value="Cancel">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
