
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <hr />
            <h2 class="title text-center">Change your profile information</h2>
            <hr />
            <div class="account-wall">
                <form action="{{ path('fos_user_profile_edit') }}" class="fos_user_profile_edit" 
                		method="POST">
                    <div id="fos_user_profile_edit">
                    	<div class="form-group">
                	        <label> Username </label>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">
                                <i class="glyphicon glyphicon-user"></i> </span>
                	        {{ form_widget(form.username, { 'attr': {'class': 'form-control' } }) }}
                	        {{ form_errors(form.username) }}
                            </div>
                        </div>
                        <div class="form-group" >
                            <label> Email </label>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">
                                <i class="glyphicon glyphicon-envelope"></i> </span>
                    	       {{ form_widget(form.email, { 'attr': {'class': 'form-control' } }) }}
                    	       {{ form_errors(form.email) }}
                            </div>
                        </div>
                        <div class="form-group">
                        	<label> Current password </label>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">
                                <i class="glyphicon glyphicon-lock"></i> </span>
                	       {{ form_widget(form.current_password, { 'attr': {'class': 'form-control' } }) }}
                	       {{ form_errors(form.current_password) }}
                           </div>
                        </div>
                		<div class="form-group">{{ form_rest(form) }}</div>
                    	<div class="form-group">
                            <div class="col-md-6">
                                <input class="btn btn-lg btn-succes btn-block" type="submit" value="Save">
                            </div>
                            <div class="col-md-6">
                                <input class="btn btn-lg btn-succes btn-block" type="reset" value="Cancel">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

