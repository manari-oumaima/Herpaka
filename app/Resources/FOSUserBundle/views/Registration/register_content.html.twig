<div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-4 col-md-offset-4">
                <hr />
                <h2 class="title">Thank you for registering</h2>
                <hr />
                    <div class="account-wall">

    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
    <div class="form-group" id="fos_user_registration_form"></div>
       <div class="form-group">
       <label> Email </label>
	       {{ form_widget(form.email, { 'attr': {'class': 'form-control' } }) }}
	       {{ form_errors(form.email) }}
       </div>

        <div class="form-group">
	        <label> Username </label>
	        {{ form_widget(form.username, { 'attr': {'class': 'form-control' } }) }}
	        {{ form_errors(form.username) }}
        </div>


        <div class="form-group">
		    <label> Password </label>
		    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control' } }) }}
        	{{ form_errors(form.plainPassword.first) }}
        </div>


        <div class="form-group">
	        <label> Confirm password </label>
	        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
			{{ form_errors(form.plainPassword.second) }}
		</div>
		<div class="form-group">{{ form_rest(form) }}</div>
	 <div>
        <input class="btn btn-lg btn-succes btn-block" type="submit" value="Register">
    </div>
</form>
</div>
</div>
</div>
</div>

